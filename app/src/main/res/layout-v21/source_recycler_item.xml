<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">
    <ImageView
        android:id="@+id/image_s"
        android:layout_width="@dimen/image_source"
        android:layout_height="@dimen/image_source"
        android:layout_below="@id/label_ps"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"
        android:contentDescription="@string/todo" />

    <TextView
        android:id="@+id/text_s"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/image_s"
        android:layout_alignTop="@id/image_s"
        android:layout_marginRight="@dimen/margin"
        android:layout_marginLeft="@dimen/margin"/>

</RelativeLayout>